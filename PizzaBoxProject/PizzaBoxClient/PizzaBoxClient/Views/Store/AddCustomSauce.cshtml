@model IEnumerable<PizzaBoxClient.Models.Sauce>

@{
    ViewData["Title"] = "AddCustomSauce";
}

<h1>Select Sauce</h1>


<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Add", "AddSauceToPizza", new { item.Id }) |
                
            </td>
        </tr>
}
    </tbody>
</table>
