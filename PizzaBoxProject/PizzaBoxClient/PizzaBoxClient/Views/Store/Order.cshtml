@model IEnumerable<PizzaBoxClient.Models.Customer>

@{
    ViewData["Title"] = "Order";
}

<h1>Order</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>

                @Html.ActionLink("Order Preset Pizza", "SelectPizza", new { id = item.Id })
                @Html.ActionLink("Order Custom Pizza", "SelectCustomPizza", new { id = item.Id })

            </td>
        </tr>
}
    </tbody>
</table>
