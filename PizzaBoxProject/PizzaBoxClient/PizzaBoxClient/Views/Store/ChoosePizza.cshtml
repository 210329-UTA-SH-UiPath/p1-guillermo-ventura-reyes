@model PizzaBoxClient.Models.IntHolderView



<h1>ChoosePizza</h1>

<h4>Select amount of Pizzas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="postOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="numPizzas" class="control-label"></label>
                <input asp-for="numPizzas" class="form-control" />
                <span asp-validation-for="numPizzas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
